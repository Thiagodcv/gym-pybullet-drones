<?xml version="1.0"?>

<robot name="simple_wall">

  <link name="wall">

    <visual>
      <geometry>
        <box size="5.0 0.1 3.0"/> <!-- width, thickness, height -->
      </geometry>

      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="5.0 0.1 3.0"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.0"/> <!-- Static object -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>

  </link>

</robot>
